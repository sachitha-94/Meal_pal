<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dolekapil.androidapplication.caloriemeter.SecondActivity"
    android:background="@color/BackgroundColor">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:id="@+id/button2"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView8"
        android:text="Name"
        android:textStyle="bold|italic"
        android:singleLine="false"
        android:visibility="invisible"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/button2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select what do you want to do?"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lose Weight"
        android:id="@+id/textView10"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="19dp"
        android:orientation="horizontal"
        android:id="@+id/sex_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:buttonTint="#3399FF"
            android:gravity="right"
            android:paddingEnd="50dp"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_gravity="center_horizontal"
            android:buttonTint="#3399FF"
            android:gravity="right"
            android:paddingEnd="40dp"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton5"
            android:buttonTint="#3399FF"
            android:gravity="right"
            android:paddingEnd="30dp"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Maintain Weight"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_above="@+id/sex_group"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gain Weight"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_above="@+id/sex_group"
        android:layout_alignRight="@+id/sex_group"
        android:layout_alignEnd="@+id/sex_group" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select your goal weight and duration to achieve it."
        android:id="@+id/textView13"
        android:layout_marginTop="11dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/sex_group"
        android:layout_alignRight="@+id/sex_group"
        android:layout_alignEnd="@+id/sex_group"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Goal Weight"
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="12dp"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="@drawable/edit_text_style"
        android:visibility="invisible"
        android:gravity="bottom"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:maxLength="4"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner4"
        android:layout_alignTop="@+id/editText4"
        android:background="@drawable/edit_text_style"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Duration"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="12dp"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_alignBottom="@+id/textView15"
        android:background="@drawable/edit_text_style"
        android:visibility="invisible"
        android:gravity="bottom"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:maxLength="4"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_alignLeft="@+id/spinner4"
        android:layout_alignStart="@+id/spinner4"
        android:layout_toStartOf="@+id/textView12"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignTop="@+id/editText5"
        android:background="@drawable/edit_text_style"
        android:layout_alignRight="@+id/spinner4"
        android:layout_alignEnd="@+id/spinner4"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button4"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
